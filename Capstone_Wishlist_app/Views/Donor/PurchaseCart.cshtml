@model Capstone_Wishlist_app.Models.PurchaseCartViewModel

@{
    ViewBag.DonorId = Model.DonorId;
    ViewBag.Title = "PurchaseCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Purchase Items for Donation</h2>

@using (Html.BeginForm("PurchaseCart", "Donor", new { id = Model.DonorId }, FormMethod.Post, new { @class = "form-horizontal" })) {
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h4>Enter Payment Information</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control", style = "max-width: 16em" } })
            @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.VerficationCode, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.VerficationCode, new { htmlAttributes = new { @class = "form-control", style = "max-width: 5em" } })
            @Html.ValidationMessageFor(model => model.VerficationCode, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ExpirationMonth, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ExpirationMonth, new { htmlAttributes = new { @class = "form-control", style = "max-width: 6em" } })
            @Html.ValidationMessageFor(model => model.ExpirationMonth, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ExpirationYear, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ExpirationYear, new { htmlAttributes = new { @class = "form-control", style = "max-width: 6em" } })
            @Html.ValidationMessageFor(model => model.ExpirationYear, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.BillingAddress, htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    @Html.EditorFor(pc => pc.BillingAddress, "_Address")
    <div class="form-group">
        <div class="col-md-3 col-md-offset-2">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-check"></i>
                Review and confirm donation
            </button>
        </div>
    </div>
}