@model ICollection<Capstone_Wishlist_app.Models.DonorWishlistItemViewModel>

<table class="table">
    <tr>
        <th class="col-xs-1">Item</th>
        <th class="col-xs-6"></th>
        <th class="col-xs-2">Wishlist</th>
        <th class="col-xs-1 text-center">List Price</th>
        <th class="col-xs-2"></th>
    </tr>

    @foreach (var wi in Model) {
        <tr>
            <td>
                <img src=@wi.ImageUrl />
            </td>
            <td>
                <a target="_blank" href=@wi.ListingUrl>@wi.Title</a>
                <i class="fa fa-external-link"></i>
            </td>
            <td></td>
            <td class="text-right">@Html.DisplayFor(w => wi.ListPrice)</td>
            <td class="text-right">
                @if (wi.IsInCart) {
                    <p class="text-success">
                        <i class="fa fa-check"></i>
                        Already in cart!
                    </p>
                } else {
                    <button type="button"
                            value="@wi.Id"
                            class="btn btn-default" onclick="addItemToCart(this)">
                        <i class="fa fa-cart-plus"></i>
                        Add to cart
                    </button>
                }
            </td>
        </tr>
    }
</table>

